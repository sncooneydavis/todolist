{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "settings": {
	"import/resolver": {
		"node": {
			"extensions": [".js", ".jsx", ".ts", ".tsx"]
		}
	}
  },
  "rules": {
    "no-unused-vars": "warn",
    "eqeqeq": "error",
    "prettier/prettier": "error",
    "import/extensions": [
	    "error",
	    "ignorePackages",
	    {
		    "js": "never",
		    "jsx": "never"
	    }
    ]
  }
}
